<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Newmusic">

	<!-- 게시판 저장 -->
	<insert id="music_insert" parameterType="music">
		<!-- insert into	music(id,title,artist,Similarity,publishdate,genre,lyrics,album,albumcoverfilepath)
		values(music_seq.nextval,#{title},#{artist},#{similarity},to_date(#{publishdate,"YYYY-MM-DD"}),
		#{genre},#{lyrics},#{album},#{albumcoverfilepath})	 -->
		
		insert into	music (id,similarity,genre,artist,title,album,lyrics,publishdate,albumcoverfilepath)
		values(music_seq.nextval,#{similarity},#{genre},#{artist},#{title},#{album},#{lyrics},
		#{publishdate},#{albumcoverfilepath,jdbcType=VARCHAR})
		
		
		<!-- insert into	music (id,similarity,genre,artist,title,album,lyrics,albumcoverfilepath)
		values(music_seq.nextval,#{similarity},#{genre},#{artist},#{title},#{album},#{lyrics},
		#{albumcoverfilepath,jdbcType=VARCHAR}) -->
		
		
		
	</insert>    
	
	<!-- 게시판 총게시물 수 -->
	<select id="music_count" resultType="int">
		select count(*) from music
	</select>	
	
	<!-- 게시판 목록 (page번호를 전달받아서 startRow와 endRow를 구함)-->
	<select id="music_list"  parameterType="int"  resultType="music">
	    <![CDATA[
		select * from 
		 (select rownum rnum,id,similarity,genre,artist,title,album,lyrics,publishdate,albumcoverfilepath from  
	  	  (select * from music order by id desc)) 
	   	   where rnum >= ((#{page}-1) * 10+1)  and rnum <= (#{page} * 10)
		]]>
	</select>
	
